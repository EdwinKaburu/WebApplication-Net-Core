<form id="@Model.MusicID" asp-action="AddToCart" asp-controller="Cart" method="post">
    <input type="hidden" name="productId" asp-for="MusicID" />
    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
    <div class="card text-white mb-3" style="background-color:#32383e">
        <img src="@imgMusic" class="card-img" height="350" width="789">
        <div class="card-body">
            <h5 class="card-title">@Model.MusicName</h5>
            <p class="card-text">@Model.Artist.ArtistDescription</p>
            <p class="card-text">
                <small class="text-muted">@Model.GenreCategory.GenreName</small>
                <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
                    Add To Cart
                </button>
            </p>
            <audio controls src="@audio"></audio>
        </div>
    </div>
</form>

