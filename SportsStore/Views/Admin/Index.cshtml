@model IEnumerable<MusicProduct>
@{
    ViewBag.Title = "All Products";
    Layout = "_AdminLayout";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Price</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td class="text-right">@item.MusicID</td>
            <td>@item.MusicName</td>
            <td class="text-right">@item.Price</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-MusicID="@item.MusicID">
                        Edit
                    </a>
                    <input type="hidden" name="MusicID" value="@item.MusicID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Products</a>
</div>