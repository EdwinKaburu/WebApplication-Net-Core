@model MusicProduct
@{
    ViewBag.Title = "Edit Products";
    Layout = "_AdminLayout";
}


<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MusicID" />
    <div class="form-group">
        <label asp-for="MusicName"></label>
        <div>
            <span asp-validation-for="MusicName" class="text-danger"></span>
        </div>
        <input asp-for="MusicName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Artist.ArtistDescription"></label>
        <div>
            <span asp-validation-for="Artist.ArtistDescription" class="text-danger"></span>
        </div>
        <input asp-for="Artist.ArtistDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GenreCategory.GenreDescription"></label>
        <div>
            <span asp-validation-for="GenreCategory.GenreDescription" class="text-danger"></span>
        </div>
        <input asp-for="GenreCategory.GenreDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>